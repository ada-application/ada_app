- model_class = App
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:accepted) + ':'
  %br
  = @app.accepted
%p
  %strong= model_class.human_attribute_name(:score) + ':'
  %br
  = @app.score
%p
  %strong= model_class.human_attribute_name(:reviewer_id) + ':'
  %br
  = @app.reviewer_id
%p
  %strong= model_class.human_attribute_name(:rejected) + ':'
  %br
  = @app.rejected

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), apps_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_app_path(@app), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), app_path(@app), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
