= simple_form_for @app, :html => { :class => 'form-horizontal' } do |f|
  = f.input :accepted
  = f.input :score
  = f.input :reviewer_id
  = f.input :rejected
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), apps_path, :class => 'btn'
