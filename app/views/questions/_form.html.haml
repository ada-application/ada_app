= simple_form_for @question, :html => { :class => 'form-horizontal' } do |f|
  = f.input :text
  = f.input :description
  = f.input :position
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), questions_path, :class => 'btn'
